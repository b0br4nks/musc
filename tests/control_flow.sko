-- control_flow.sko
use "std.sko"

-- if-else multi-line
32 32 + 65 = if
	64 =>
else
	128 =>
end

"===========================\n" stdout fmt

-- if-else oneline
32 32 + 64 = if 64 => else 128 => end

"===========================\n" stdout fmt

-- while multi-line
10 while cp -1 > do
	cp =>
	1 -
end

"===========================\n" stdout fmt

-- while oneline
0 while cp 11 < do cp => 1 + end

