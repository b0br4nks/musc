-- name input
use <std.sko>

fn NAME_CAPACITY 256 end
fn name mem end

"What is your name? " stdout fmt !

NAME_CAPACITY name stdin scan
cp 0 <= if
  "[ERROR] Could not read your name...\n" stderr fmt !
  1 exit
end

name over + 1 - &l '\n' = if
  1 -
end

"Hello, " stdout fmt !
name stdout fmt !
"!\n" stdout fmt !
